                    @if (_PPQM.Platform == "Application" || _PPQM.Platform == "መተግበሪያ")
                    {
                        <p style="text-align: justify; text-align-last: left;">ለተጠቃሚዎች አገልግሎታችንን  ለማካሄድ እና ለማሻሻል መረጃ እንሰበስባለን፡፡ይህን መተግበሪያ ለመጠቀም የተወሰነ መረጃ ሊሰጡን ይገባል። ይህ መረጃ አገልግሎታችንን ለመጠቀም አስፈላጊ ነው ያለዚህ መረጃ አገልግሎታችንን መጠቀም አይችሉም። የምንሰበስባቸው ዳታዎች:-</p>
                    }
                    @if (_PPQM.Platform == "Both" || _PPQM.Platform == "ሁለቱም")
                    {
                        <p style="text-align: justify; text-align-last: left;">ለተጠቃሚዎች አገልግሎታችንን  ለማካሄድ እና ለማሻሻል መረጃ እንሰበስባለን፡፡ይህን መተግበሪያ ወይም ድህረ ገጽ ለመጠቀም የተወሰነ መረጃ ሊሰጡን ይገባል። ይህ መረጃ አገልግሎታችንን ለመጠቀም አስፈላጊ ነው ያለዚህ መረጃ አገልግሎታችንን መጠቀም አይችሉም። የምንሰበስባቸው ዳታዎች:-</p>
